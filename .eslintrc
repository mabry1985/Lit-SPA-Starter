{
  "extends": ["@open-wc/eslint-config"],
  "plugins": ["import"],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "import/no-unresolved": "error",
    "object-curly-newline": "off",
    "indent": "off",
    "implicit-arrow-linebreak": "off",
    "comma-dangle": "warn"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  }
}
